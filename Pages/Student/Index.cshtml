            <td>
                @Html.DisplayFor(modelItem => item.Student_Last_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Mobile_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Email)
            </td>
