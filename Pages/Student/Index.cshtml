<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Student_First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Student_Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Student_Mobile_Number)
            </th>
            <th>
